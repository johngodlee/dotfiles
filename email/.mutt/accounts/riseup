set from = "johngodlee@riseup.net"
set spoolfile = +johngodlee@riseup.net/INBOX 
set postponed = +johngodlee@riseup.net/Drafts
set record = +johngodlee@riseup.net/Sent

set sendmail = "/usr/local/bin/msmtp -a riseup"

macro index D \
    "<save-message>+johngodlee@riseup.net/Trash<enter>" \
    "move message to the trash"

macro index S \
    "<save-message>+johngodlee@riseup.net/Spam<enter>"  \
        "mark message as spam"

