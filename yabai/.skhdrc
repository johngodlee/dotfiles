# focus windows
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k: yabai -m window --focus north 
alt - l : yabai -m window --focus east

# swap managed windows
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north 
shift + alt - l : yabai -m window --swap east

# move managed windows
shift + cmd - h : yabai -m window --warp west
shift + cmd - j : yabai -m window --warp south
shift + cmd - k : yabai -m window --warp north
shift + cmd - l : yabai -m window --warp east

# balance size of windows
alt + cmd - 0 : yabai -m space --balance

# resize windows
alt + cmd - h : \
    yabai -m window --resize left:-20:0 ; \
    yabai -m window --resize right:-20:0

alt + cmd - j : \
    yabai -m window --resize bottom:0:20 ; \
    yabai -m window --resize top:0:20

alt + cmd - k : \
    yabai -m window --resize top:0:-20 ; \
    yabai -m window --resize bottom:0:-20

alt + cmd - l : \
    yabai -m window --resize right:20:0 ; \
    yabai -m window --resize left:20:0

# make floating window fill screen
shift + alt - up     : yabai -m window --grid 1:1:0:0:1:1

# focus spaces
ctrl - x : yabai -m space --focus recent
shift + ctrl - l : yabai -m space --focus next
shift + ctrl - h : yabai -m space --focus prev
ctrl - 1 : yabai -m space --focus 1 
ctrl - 2 : yabai -m space --focus 2 
ctrl - 3 : yabai -m space --focus 3 
ctrl - 4 : yabai -m space --focus 4 
ctrl - 5 : yabai -m space --focus 5 
ctrl - 6 : yabai -m space --focus 6 
ctrl - 7 : yabai -m space --focus 7 
ctrl - 8 : yabai -m space --focus 8 
ctrl - 9 : yabai -m space --focus 9 

# send window to space 
shift + ctrl - 1 : yabai -m window --space  1
shift + ctrl - 2 : yabai -m window --space  2
shift + ctrl - 3 : yabai -m window --space  3
shift + ctrl - 4 : yabai -m window --space  4
shift + ctrl - 5 : yabai -m window --space  5
shift + ctrl - 6 : yabai -m window --space  6
shift + ctrl - 7 : yabai -m window --space  7
shift + ctrl - 8 : yabai -m window --space  8
shift + ctrl - 9 : yabai -m window --space  9

# Create and destroy spaces 
shift + ctrl - n : yabai -m space --create
shift + ctrl - d : yabai -m space --destroy

# Toggle fullscreen
alt - f : yabai -m window --toggle zoom-fullscreen

# Rotate windows 
alt - r : yabai -m space --rotate 90

# quickly restart yabai
ctrl + alt + cmd - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# quickly restart skhd
ctrl + alt + cmd - s : skhd --reload
