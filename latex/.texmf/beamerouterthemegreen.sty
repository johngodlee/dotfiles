\defbeamertemplate*{title page}{green}[1][]{
	\includegraphics[width=\paperwidth]{\titlebg}
	\begin{tikzpicture}[remember picture,overlay]
      	\node (back names) [
      		align=left,
    		shape=rectangle, 
			fill=titlebox, 
			fill opacity=0.8, 
			text opacity=1, 
			inner sep=10pt,
			minimum height=1.02\textheight, 
			minimum width=0.5\textwidth, 
			anchor=north west] at (current page.north west) {
      	  		\begin{minipage}{0.6\textwidth}
					\usebeamerfont{title}
					\begin{flushright}\inserttitle \par
					\vspace{0.5em}
					\usebeamerfont{subtitle}\insertsubtitle \par
					\bigskip
					\usebeamerfont{author}\insertauthor \par
					\usebeamerfont{institute}\insertinstitute \par
					\usebeamerfont{date}\insertdate \par
					\end{flushright}
					\inserttitlegraphic
				\end{minipage}
		};
	\end{tikzpicture}
}

