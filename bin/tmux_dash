#!/bin/sh

# Create new session
tmux -2 new -s 'dash'

# Start vim
tmux send-keys "vim" Enter

# New window, split into 4
tmux new-window -n 'bash'
tmux split-window -v
tmux split-window -h
tmux select-pane -t 1
tmux split-window -h

# Split pane 1 vertically
tmux select-pane -t 1
tmux split-window -v

# Start fb-messenger-cli in pane 1
tmux select-pane -t 1
tmux send-keys "fb-messenger-cli" Enter

# Split pane 5 horizontally
tmux select-pane -t 5
tmux split-window -h

# Resize panes
tmux resize-pane -D 8

# New window, start cmus
tmux new-window -n 'cmus'
tmux send-keys "cmus" Enter

# New window, start alpine
tmux new-window -n 'alpine'
tmux send-keys "alpine" Enter

# New window, start vim calendar
tmux new-window -n 'calendar'
tmux send-keys "vim -u ~/.vimrc_calendar" Enter
tmux send-keys ":Calendar" Enter

# Detach and reattach to make it work properly
tmux detach
tmux a -t dash
tmux select-window -t 1
