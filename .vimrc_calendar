" A .vimrc for use within the calendar.vim plugin,
" stripped down and using a custom status line showing common commands


set nocompatible		" be iMproved, required
filetype off			" required

" set runtime path to include Vundle and initialize
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()		" required

" PLUGINS/
Plugin 'VundleVim/Vundle.vim'	" required
Plugin 'itchyny/calendar.vim'	" Use vim like a calendar app 

" /PLUGINS
call vundle#end()		" required
filetype plugin indent on	" required

" vundle help `:h vundle`
" :PluginList       - lists configured plugins
" :PluginInstall    - installs plugins; append `!` to update or just :PluginUpdate
" :PluginSearch foo - searches for foo; append `!` to refresh local cache
" :PluginClean      - confirms removal of unused plugins; append `!` to auto-approve removal

" enable syntax highlighting
syntax on

" Set mouse mode on
set mouse=n

" Stop creating swp and ~ files
set nobackup
set noswapfile

" Ignore case of searches
set ignorecase

" Donâ€™t reset cursor to start of line when moving around
set nostartofline

" Preserve indentation on wrapped lines
set breakindent

" map `A` (append at end of line) to `a` (append in place)
nnoremap a A

" Move by visual lines rather than actual lines with k,j
nnoremap k gk
nnoremap j gj
nnoremap gk k
nnoremap gj j

" Easier save and quit with ;
noremap ;w :w<CR>
noremap ;q :q<CR>

" Normal backspace behaviour on OSX
set backspace=2

" Copy and paste from `+` register for interacting with mac clipboard
vnoremap y "+y 
vnoremap p "+p
nnoremap p "+gp
vnoremap d "+d
nnoremap dd "+dd

" Use google calendar on calendar.vim
let g:calendar_google_calendar = 1

" Make statusline always show
set laststatus=2

" statusline
	" left side
	set statusline='<>'\ change\ view\ 
	set statusline+=\|\ 
	set statusline+='a'\ add\ event\ 
	set statusline+=\|\ 
	set statusline+='E'\ view\ agenda\ 
	set statusline+=\|\ 
	set statusline+='D'\ delete\ highlighted\ event\ 
	set statusline+=\|\ 
	set statusline+='t'\ go\ to\ today\ 
	set statusline+=%=	" Switch to right side

	" right side
	set statusline+='MM/DD\ -\ MM/DD\ TITLE'\ 
	set statusline+=\|\ 
	set statusline+='HH:MM\ -\ HH:MM\ TITLE'\  
